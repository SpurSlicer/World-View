{{> message}}
<!DOCTYPE html>
<html>
<head>
    <title>{{title}}</title>
    <style>
        .grid-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 20px;
            padding: 20px;
        }
        .grid-item {
            background-color: #77d6f8;
            /* thoughtd be cute to make them circles */
            width: 150px;
            height: 150px;
            border-radius: 50%;
            display: flex;
            overflow: hidden;
            padding: 20px;
            text-align: center;
        }
        .text-container {
            background-color: rgba(255, 255, 255, 0.5);
            border-radius: 10px;
            padding: 5px;
            max-width: 100%;
            display: block;
            word-wrap: break-word;
        }
    </style>
</head>
<body>
    
    <h1>{{title}}</h1>
    <h4>Click on any world to explore!</h4>
    <div class="grid-container">
        {{#each nodes}}
            <form action="/submitusername" method="POST">
                <input class="form-control" type="text" name="username"  value={{this.username}} style="display:none;">
                <div class="grid-item" onclick="javascript:this.parentNode.submit()">
                    <div class="text-container">
                        <!--<p><strong>{{this.filename}}</strong></p>-->
                        <p><strong>{{this.username}}</strong>'s World</p>
                    </div>
                </div>
            </form>
        {{/each}}
    </div>

    <script>
    /* script for random color generator for worlds */
    function randomColor() {

        var letters = '0123456789ABCDEF';
        var color = '#';

        for (var i = 0; i < 6; i++) {

            color += letters[Math.floor(Math.random() * 16)];

        }

        return color;
    }

    document.addEventListener('DOMContentLoaded', function() {

        var items = document.querySelectorAll('.grid-item');

        items.forEach(function(item) {

            item.style.backgroundColor = randomColor();

        });
    });
    </script>
</body>
</html>
{{> message}}
<div class="container">
    <div class="form-container">
        <form action="/addfriend" method="POST">
            <div class="mb-3">
                <input class="form-control" type="text" name="friend" placeholder="Enter username to add friend">
            </div>
            <button type="submit" class="btn btn-primary">Add Friend</button>
        </form>
    </div>

    <div class="row">
        <div class="col">
            <ul class="list-unstyled">
                {{#each friends}}
                    <li class="card profile-card" style="background-color: antiquewhite;">
                        <a href="/view?u={{this.friend_id}}" class="d-flex align-items-center p-2">
                            <div class="profile-img"></div>
                            <div class="ms-3">
                                <h5 class="card-title mb-0">{{this.friend_id}}</h5>
                            </div>
                        </a>
                        <form action="/unfriend" method="POST">
                            <input type="hidden" name="friend" value="{{this.friend_id}}">
                            <button class="btn btn-primary" type="submit">Unfriend</button>
                        </form>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>
<table>
    <thead>
        <tr>
            <th>Course ID</th>
            <th>Course Name</th>
            <th>Credit Hours</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each worlds}} <!-- rewrite for cards-->
        <tr>
            <td>{{this.course_id}}</td>
            <td>{{this.course_name}}</td>
            <td>{{this.course_hours}}</td>
            <td>
                <form method="POST" action="/courses/add">
                    <input type="hidden" name="course_id" value="{{this.course_id}}">
                    <button type="submit" class="{{#unless this.taken}}btn-success{{/unless}}" {{#if
                        this.taken}}disabled{{/if}}>Add</button> <!-- rewrite for tags-->
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>